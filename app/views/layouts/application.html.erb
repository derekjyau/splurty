<script>window.__theme = 'bs4';</script>

<!DOCTYPE html>

<html>
  <head>
    <title>Splurty</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <header class="row">
      <div class="col-3">
        <%= link_to root_path, class: 'logo' do %>
        <div class="circle">
          <br />
          Made in 
          <br />
          Summer of 
          <br />
          2018
        </div>
        <% end %>
      </div>

      <div class="col-4 slogan">
        Just a simple quote generator
      </div>

      <div class="col-5 links">
        <!-- Button trigger modal -->
        <%= link_to 'Add Quote', '#', data: {toggle: 'modal', target: '#exampleModal'} %>
        <%= link_to 'About', about_path %>
      </div>
    </header>

    <div class="modal hide fade" id="exampleModal" title="My modal">
      <div class="modal-header">
        <button aria-hidden="true" class="close" data-dismiss="modal" type="button">Ã—</button>
        <h3 id="myModalLabel">Modal header</h3>
      </div>
      <div class="modal-body">
        Modal Body
      </div>
      <div class="modal-footer">
        <button aria-hidden="true" class="btn" data-dismiss="modal">Close</button>
      </div>
    </div>

    <hr />

    <br class="clear">

    <div class="container">
      <% if flash[:error].present? %>
        <div class="col-10 offset-1 alert alert-danger">
          <%= flash[:error].html_safe %>
        </div>
      <% end %>
      <%= yield %>
    </div>

    <div class="footer">
      <div class="container">
        <div class="row">
          <div class="col-6">
            <%= link_to "Click here for a different quote!", root_path, class: "next-quote" %>
          </div>
          <div class= "col-6 footer-blurb">
            Created by yours truly, <a href="http:thefirehoseproject.com">Derek Yau</a><br />
          </div>
        </div>
      </div>
    </div>

  </body>
</html>
